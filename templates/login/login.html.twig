{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block content %}
    <form class="form-style w-100 m-auto" method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté(e) sous {{ app.user.username }}, <a href="{{ path('app_logout') }}">déconnexion</a>.
            </div>
        {% endif %}

        <h1 class="text-center">Connexion</h1>
        <div class="form-floating text-secondary">
            <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" placeholder="Identifiant" required autofocus>
            <label for="username">Identifiant</label>
        </div>
        
        <div class="form-floating text-secondary">
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" placeholder="Mot de passe" required>
            <label for="password">Mot de passe</label>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <input type="hidden" name="_target_path" value="/subject">

        <button class="btn btn-lg btn-light fw-bold border-white bg-white" type="submit">
            C'est parti !
        </button>
    </form>
{% endblock content %}
